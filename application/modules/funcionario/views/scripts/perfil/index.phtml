<script type="text/javascript">
    function alterarSenha() {

        if ($('.senha').is(':visible')) {
            $('#senha_atual').val('');
            $('#nova_senha').val('');
            $('#redigite_senha').val('');
            $('.senha').hide('slow');

        }
        else {
            $('.senha').show('slow');
        }

    }
    $(function() {
        $('#usuario_grupo_id').change(function() {
            var str = ""
            $("#usuario_grupo_id option:selected").each(function() {
                str = $(this).val();
            });
            if (str == "0" || str == "1") {
                $('.escola').hide('slow');
            } else {
                $('.escola').show('slow')
            }

        })
                .trigger('change');
    });

    function removeImagemButton(id) {
        $('#remove').attr('value', id);
        $('#form_usuario').submit();
    }
</script>

